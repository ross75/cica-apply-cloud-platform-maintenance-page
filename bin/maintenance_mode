#!/bin/bash
set -e -o pipefail

action=$1
namespace=$2

if [[ ${namespace} != *claim-criminal-injuries-compensation* ]]; then
  echo '*************************************************'
  echo 'Namespace must be one of:'
  echo
  echo '- claim-criminal-injuries-compensation-dev'
  echo
  echo '- claim-criminal-injuries-compensation-uat'
  echo
  echo '- claim-criminal-injuries-compensation-prod'
  echo
  echo '- claim-criminal-injuries-compensation-stag'
  echo '*************************************************'
  exit 1
fi

if [[ ! ${action} =~ (enable|disable) ]]; then
  echo '*************************************************'
  echo 'Action must be either:'
  echo
  echo '- enable'
  echo
  echo '- disable'
  echo '*************************************************'
  echo
  exit 1
fi

if [[ ${namespace} == 'claim-criminal-injuries-compensation-dev' ]]; then
  hostname_postfix='dev.claim-criminal-injuries-compensation.service.justice.gov.uk'
elif [[ ${namespace} == 'claim-criminal-injuries-compensation-uat' ]]; then
  hostname_postfix='uat.claim-criminal-injuries-compensation.service.justice.gov.uk'
elif [[ ${namespace} == 'claim-criminal-injuries-compensation-prod' ]]; then
  hostname_postfix='claim-criminal-injuries-compensation.service.justice.gov.uk'
elif [[ ${namespace} == 'claim-criminal-injuries-compensation-stg' ]]; then
  hostname_postfix='stag.claim-criminal-injuries-compensation.service.justice.gov.uk'
else
  echo '*************************************************'
  echo 'Invalid namespace provided. Check the README'
  echo '*************************************************'
  echo
  exit 1
fi

echo '*************************************************'
echo "Action: ${action}"
echo
echo "Namespace: ${namespace}"
echo
echo "Hostname postfix: ${hostname_postfix}"
echo '*************************************************'
echo

ingresses=$(kubectl get ingresses -n "${namespace}")

for line in ${ingresses}; do
  read -ra parts <<< "${line}"

  for part in "${parts[@]}"; do
    if [[ $part == *-ingress* ]]; then
      echo '*************************************************'
      ingress="${part}"
      echo "Ingress is ${ingress}"
      echo

      service_slug="${ingress/-ingress/}"
      echo "Service slug is ${service_slug}"
      echo

      hostname="${service_slug}.${hostname_postfix}"
      echo "Hostname is ${hostname}"
      echo

      if [[ ${action} == 'enable' ]]; then
        service_name=maintenance-page-svc
      else
        service_name="${service_slug}"
      fi
      echo "Service name is ${service_name}"
      echo

      if [[ ${action} == 'enable' ]]; then
        container_port=80
      else
        container_port=3000
      fi
      echo "Container port is ${container_port}"
      echo

      namespace_directory="./tmp/${namespace}"
      if [ ! -d "${namespace_directory}" ]; then
        mkdir "${namespace_directory}"
      fi

      filepath="${namespace_directory}/${ingress}.yaml"
      echo "Copying template to ${filepath}"
      cp "./templates/ingress.yaml" "${filepath}"
      echo

      sed -i '' "s/replace_ingress_name/${ingress}/g" "${filepath}"
      sed -i '' "s/replace_service_slug/${service_slug}/g" "${filepath}"
      sed -i '' "s/replace_namespace/${namespace}/g" "${filepath}"
      sed -i '' "s/replace_hostname/${hostname}/g" "${filepath}"
      sed -i '' "s/replace_service_name/${service_name}/g" "${filepath}"
      sed -i '' "s/replace_container_port/${container_port}/g" "${filepath}"

      echo "Applying new ingress ${filepath} in ${namespace}"
      kubectl apply -f "${filepath}" -n "${namespace}"

      echo '*************************************************'
      echo
    fi
  done
done

